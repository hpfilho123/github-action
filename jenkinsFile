pipeline {
    agent any
    
    stages {
        stage('Deploy') {
            steps {
                // Passo para fazer o pull da imagem Docker
                script {
                    def dockerImage = docker.image('ghcr.io/hpfilho123/github-action/teste:lasted')
                    dockerImage.pull()
                }

                // Passo para implantar a imagem Docker
                script {
                    def dockerImage = docker.image('ghcr.io/hpfilho123/github-action/teste:lasted')
                    dockerImage.run('-p 30:30 --name minha-aplicacao -d')
                }
            }
        }
    }
}